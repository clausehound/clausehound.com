{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@assets/*": ["assets/*"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms/*": ["components/organisms/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
